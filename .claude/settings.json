{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'INPUT=$(cat); if echo \"$INPUT\" | grep -qP \"file_path.*?[/\\\\]\\.[e]nv\"; then echo \"BLOCKED: Do not write env files\" >&2; exit 2; fi'"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'INPUT=$(cat); if echo \"$INPUT\" | grep -qE \"package-lock\\.json\"; then echo \"BLOCKED: Do not edit package-lock.json directly - use npm install instead\" >&2; exit 2; fi'"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Bash(npm run dev)",
      "Bash(npm test)",
      "Bash(npm install *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git branch*)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(mkdir *)"
    ]
  }
}